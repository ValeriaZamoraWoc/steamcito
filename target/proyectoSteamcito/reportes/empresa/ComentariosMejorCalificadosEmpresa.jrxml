<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
    xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="ComentariosMejorCalificadosEmpresa"
    pageWidth="595"
    pageHeight="842"
    columnWidth="555"
    leftMargin="20"
    rightMargin="20"
    topMargin="20"
    bottomMargin="20">

    <!-- Parámetro -->
    <parameter name="NOMBRE_EMPRESA" class="java.lang.String"/>

    <!-- Campos -->
    <field name="descripcion" class="java.lang.String"/>
    <field name="nombreJuego" class="java.lang.String"/>
    <field name="mailUsuario" class="java.lang.String"/>
    <field name="promedioCalificacion" class="java.lang.Double"/>

    <!-- Título -->
    <title>
        <band height="45">

            <staticText>
                <reportElement x="0" y="0" width="555" height="20"/>
                <text><![CDATA[COMENTARIOS MEJOR CALIFICADOS]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="22" width="555" height="20"/>
                <textFieldExpression><![CDATA["Empresa: " + $P{NOMBRE_EMPRESA}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="44" width="555" height="1"/>
            </line>

        </band>
    </title>

    <!-- Encabezados -->
    <columnHeader>
        <band height="25">

            <staticText>
                <reportElement x="0" y="0" width="250" height="20"/>
                <text><![CDATA[Comentario]]></text>
            </staticText>

            <staticText>
                <reportElement x="250" y="0" width="135" height="20"/>
                <text><![CDATA[Juego]]></text>
            </staticText>

            <staticText>
                <reportElement x="385" y="0" width="120" height="20"/>
                <text><![CDATA[Usuario]]></text>
            </staticText>

            <staticText>
                <reportElement x="505" y="0" width="50" height="20"/>
                <text><![CDATA[Prom.]]></text>
            </staticText>

            <!-- Líneas verticales -->
            <line><reportElement x="250" y="0" width="1" height="25"/></line>
            <line><reportElement x="385" y="0" width="1" height="25"/></line>
            <line><reportElement x="505" y="0" width="1" height="25"/></line>

            <!-- Línea inferior -->
            <line><reportElement x="0" y="24" width="555" height="1"/></line>

        </band>
    </columnHeader>

    <!-- Detalle -->
    <detail>
        <band height="30">

            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="0" width="250" height="30"/>
                <textFieldExpression><![CDATA[$F{descripcion}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="250" y="0" width="135" height="30"/>
                <textFieldExpression><![CDATA[$F{nombreJuego}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="385" y="0" width="120" height="30"/>
                <textFieldExpression><![CDATA[$F{mailUsuario}]]></textFieldExpression>
            </textField>

            <textField pattern="0.0">
                <reportElement x="505" y="0" width="50" height="30"/>
                <textFieldExpression><![CDATA[$F{promedioCalificacion}]]></textFieldExpression>
            </textField>

            <!-- Líneas verticales -->
            <line><reportElement x="250" y="0" width="1" height="30"/></line>
            <line><reportElement x="385" y="0" width="1" height="30"/></line>
            <line><reportElement x="505" y="0" width="1" height="30"/></line>

            <!-- Línea inferior -->
            <line><reportElement x="0" y="29" width="555" height="1"/></line>

        </band>
    </detail>

</jasperReport>
