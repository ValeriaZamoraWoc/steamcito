<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
    xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="PrestadosMasJugadosUsuario"
    pageWidth="595"
    pageHeight="842"
    columnWidth="555"
    leftMargin="20"
    rightMargin="20"
    topMargin="20"
    bottomMargin="20">

    <!-- Parámetro -->
    <parameter name="MAIL_USUARIO" class="java.lang.String"/>

    <!-- Campos -->
    <field name="nombreJuego" class="java.lang.String"/>
    <field name="diasTotales" class="java.lang.Integer"/>

    <!-- Título -->
    <title>
        <band height="45">

            <staticText>
                <reportElement x="0" y="0" width="555" height="20"/>
                <text><![CDATA[JUEGOS PRESTADOS MÁS JUGADOS]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="22" width="555" height="20"/>
                <textFieldExpression><![CDATA["Usuario: " + $P{MAIL_USUARIO}]]></textFieldExpression>
            </textField>

            <!-- Línea separadora -->
            <line>
                <reportElement x="0" y="44" width="555" height="1"/>
            </line>

        </band>
    </title>

    <!-- Encabezados -->
    <columnHeader>
        <band height="25">

            <staticText>
                <reportElement x="0" y="0" width="260" height="20"/>
                <text><![CDATA[Juego]]></text>
            </staticText>

            <staticText>
                <reportElement x="260" y="0" width="100" height="20"/>
                <text><![CDATA[Días prestado]]></text>
            </staticText>

            <!-- Líneas verticales -->
            <line><reportElement x="260" y="0" width="1" height="25"/></line>
            <line><reportElement x="360" y="0" width="1" height="25"/></line>

            <!-- Línea inferior -->
            <line><reportElement x="0" y="24" width="555" height="1"/></line>

        </band>
    </columnHeader>

    <!-- Detalle -->
    <detail>
        <band height="70">

            <textField>
                <reportElement x="0" y="25" width="260" height="20"/>
                <textFieldExpression><![CDATA[$F{nombreJuego}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="260" y="25" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{diasTotales}]]></textFieldExpression>
            </textField>

            <!-- Líneas verticales -->
            <line><reportElement x="260" y="5" width="1" height="60"/></line>
            <line><reportElement x="360" y="5" width="1" height="60"/></line>

            <!-- Línea inferior -->
            <line><reportElement x="0" y="69" width="555" height="1"/></line>

        </band>
    </detail>

</jasperReport>
