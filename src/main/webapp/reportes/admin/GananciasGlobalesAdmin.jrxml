<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
    xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="GananciasGlobalesAdmin"
    pageWidth="595"
    pageHeight="842"
    columnWidth="555"
    leftMargin="20"
    rightMargin="20"
    topMargin="20"
    bottomMargin="20">

    <!-- Campos -->
    <field name="nombreJuego" class="java.lang.String"/>
    <field name="totalGeneral" class="java.lang.Integer"/>

    <!-- Título -->
    <title>
        <band height="40">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <text><![CDATA[REPORTE DE GANANCIAS GLOBALES]]></text>
            </staticText>

            <!-- Línea inferior del título -->
            <line>
                <reportElement x="0" y="35" width="555" height="1"/>
            </line>
        </band>
    </title>

    <!-- Encabezados -->
    <columnHeader>
        <band height="25">

            <staticText>
                <reportElement x="0" y="0" width="350" height="20"/>
                <text><![CDATA[Nombre del Juego]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="0" width="205" height="20"/>
                <text><![CDATA[Total Ganado]]></text>
            </staticText>

            <!-- Línea vertical entre columnas -->
            <line>
                <reportElement x="351" y="0" width="1" height="25"/>
            </line>

            <!-- Línea horizontal inferior -->
            <line>
                <reportElement x="0" y="24" width="555" height="1"/>
            </line>

        </band>
    </columnHeader>

    <!-- Datos -->
    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="350" height="20"/>
                <textFieldExpression><![CDATA[$F{nombreJuego}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="0" width="205" height="20"/>
                <textFieldExpression><![CDATA[$F{totalGeneral}]]></textFieldExpression>
            </textField>

            <!-- Línea vertical entre columnas -->
            <line>
                <reportElement x="350" y="0" width="1" height="20"/>
            </line>

            <!-- Línea horizontal inferior (separa filas) -->
            <line>
                <reportElement x="0" y="19" width="555" height="1"/>
            </line>

        </band>
    </detail>

</jasperReport>
